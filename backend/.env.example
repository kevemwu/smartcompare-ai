# 基本設定
NODE_ENV=development
PORT=4001
API_PREFIX=/api/v1

# LLM 設定
LLM_PROVIDER=auto 
OLLAMA_ENABLED=true
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2:7b-instruct-q8_0
OLLAMA_TIMEOUT=120000
OLLAMA_MAX_RETRIES=3

GEMINI_ENABLED=true
GEMINI_API_KEY=your-api-key-here
GEMINI_MODEL=gemini-1.5-flash-latest
GEMINI_TIMEOUT=30000

LLM_FALLBACK_ENABLED=true
LLM_FALLBACK_ORDER=gemini,ollama,keyword
LLM_AUTO_SWITCH_ON_ERROR=true

# CORS 設定
FRONTEND_URL=http://localhost:4000
ALLOWED_ORIGINS=http://localhost:4000,http://localhost:5173

# 爬蟲設定
CRAWLER_DELAY_MS=2000
CRAWLER_TIMEOUT_MS=30000
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
CRAWLER_MAX_RETRIES=3
CRAWLER_CONCURRENT_LIMIT=5